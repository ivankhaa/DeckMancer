<Window x:Class="DeckMancer.ProjectManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeckMancer"
        mc:Ignorable="d"
        Title="DeckMancer: ProjectManager" Height="400" Width="300" Icon="\DeckMancer.png"
        >
    <Grid Style="{StaticResource GridCanvasStyle}">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20">
            <Button Width="200" Height="20" Content="New Project" Click="NewProject_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Width="200" Height="20" Content="Open Project" Click="OpenProject_Click" Margin="0 20 0 0" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
