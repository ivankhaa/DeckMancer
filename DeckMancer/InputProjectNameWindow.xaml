<Window x:Class="DeckMancer.InputProjectNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Project Name" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox MaxHeight="30" MinHeight="25" x:Name="ProjectNameTextBox" Grid.Row="0" Margin="0 15 0 0" Text="NewProject" TextAlignment="Center" TextWrapping="Wrap"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="OK" Width="40" Click="OK_Click" Margin="5 0 15 0" />
            <Button Content="Cancel" Click="Cancel_Click" Margin="5 0 0 0" />
        </StackPanel>
    </Grid>
</Window>
